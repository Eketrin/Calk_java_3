<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >


    <EditText
        android:id="@+id/InputText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/back_input"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="text"
        android:text="0"
        android:textSize="40pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_input">

            <Button
                android:id="@+id/AllClear"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_lite_red"
                android:text="AC"
                android:textSize="20sp" />

            <Button
                android:id="@+id/PlusMinus"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_lite_red"
                android:text="+/-"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/Procent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_lite_red"
                android:text="%"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/Delenie"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_red"
                android:text="/"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_input">

            <Button
                android:id="@+id/Seven"
                android:onClick="clicKNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_orange"
                android:text="7"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/Eight"
                android:onClick="clicKNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_orange"
                android:text="8"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/Nine"
                android:onClick="clicKNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_orange"
                android:text="9"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/Umnojenie"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_red"
                android:text="*"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_input">

            <Button
                android:id="@+id/Four"
                android:onClick="clicKNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_orange"
                android:text="4"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/Five"
                android:onClick="clicKNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_orange"
                android:text="5"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/Six"
                android:onClick="clicKNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_orange"
                android:text="6"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/Plus"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_red"
                android:text="+"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_input">

            <Button
                android:id="@+id/One"
                android:onClick="clicKNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_orange"
                android:text="1"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/Two"
                android:onClick="clicKNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_orange"
                android:text="2"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/Three"
                android:onClick="clicKNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_orange"
                android:text="3"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/Minus"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_red"
                android:text="-"
                android:textSize="20sp"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_input">

            <Button
                android:id="@+id/Zero"
                android:layout_marginRight="1pt"
                android:layout_weight="2"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_orange"
                android:text="0"
                android:textSize="20sp"/>


            <Button
                android:id="@+id/Point"
                android:layout_marginRight="1pt"
                android:layout_weight="3"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_orange"
                android:text=","
                android:textSize="20sp"/>

            <Button
                android:id="@+id/Ravno"
                android:layout_marginRight="1pt"
                android:layout_weight="3"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/buttons_red"
                android:text="="
                android:textSize="20sp"/>
        </TableRow>
    </LinearLayout>

</LinearLayout>